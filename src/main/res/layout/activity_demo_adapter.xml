<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText" >

    <ListView
        android:id="@+id/info_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:fastScrollEnabled="true" />

    <Button
        android:id="@+id/add_more_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dip"
        android:text="+" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_more_item_btn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/view_to_reflect_flyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#66DDDDDD" >

            <ImageView
                android:id="@+id/img_imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#AADDDDDD"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/info_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="#AA666666"
                android:gravity="center"
                android:padding="5dip"
                android:text="■■■■■■■■■■■■■■■■■■"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <ImageView
            android:id="@+id/img_reflect_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="123456"
        android:textSize="30sp" />

</RelativeLayout>